{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "resolve": true,
    "emit": true,
    "get": true,
    "post": true,
    "defer": true,
    "tween": true,
    "clearTween": true,
    "Config": true,
    "Global": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "html"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "key-spacing": [
      "error",
      { "mode": "minimum" }
    ]
  }
}
